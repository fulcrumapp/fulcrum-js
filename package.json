{
  "name": "@fulcrumapp/fulcrum-js",
  "version": "3.0.0",
  "description": "JavaScript and TypeScript wrapper for the Fulcrum API",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "types": "./generated/dist/index.d.ts"
    },
    "./generated": {
      "import": "./generated/dist/esm/index.js",
      "require": "./generated/dist/index.js",
      "types": "./generated/dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "generated/dist",
    "src",
    "README.markdown",
    "LICENSE"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "build": "npm run build:generated && npm run build:wrapper",
    "build:generated": "cd generated && npm install && npm run build",
    "build:wrapper": "tsc -p tsconfig.build.json && tsc -p tsconfig.build.esm.json",
    "clean": "rm -rf dist generated/dist",
    "download:spec": "curl -s https://raw.githubusercontent.com/fulcrumapp/api/v2/reference/rest-api.json > openapi/rest-api.json",
    "generate": "npx @openapitools/openapi-generator-cli generate -i openapi/rest-api.json -g typescript-axios -o generated --additional-properties=npmName=fulcrum-generated,npmVersion=3.0.0,supportsES6=true,withSeparateModelsAndApi=true,apiPackage=api,modelPackage=models,importFileExtension=.js,useSingleRequestParameter=true,stringEnums=true,withInterfaces=true",
    "generate:full": "npm run download:spec && npm run generate && npm run build",
    "prepublishOnly": "npm run build"
  },
  "author": "Jason Sanford (jasonsanford@gmail.com)",
  "license": "BSD-2-Clause",
  "eslintConfig": {
    "extends": "fulcrum",
    "globals": {
      "fetch": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@openapitools/openapi-generator-cli": "^2.16.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "axios": "^1.13.1"
  }
}
